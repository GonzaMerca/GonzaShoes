@model GonzaShoes.Model.DTOs.Size.SizeDTO

@{
    ViewData["Title"] = Model.Id == 0 ? "Crear Talle" : "Editar Talle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Save" method="post">
    <!-- Muestra los errores generales de validación -->
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Number">Número</label>
        <input type="text" id="Number" name="Number" class="form-control" value="@Model.Number" required />
        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
    </div>

    <input type="hidden" name="Id" value="@Model.Id" />

    <!-- Botones con espacio entre ellos -->
    <div class="form-group mt-4 d-flex">
        <button type="submit" class="btn btn-primary btn-lg me-3">
            @((Model.Id == 0) ? "Crear" : "Guardar")
        </button>
        <a href="@Url.Action("Index", "Size")" class="btn btn-secondary btn-lg">Volver a la lista</a>
    </div>
</form>
